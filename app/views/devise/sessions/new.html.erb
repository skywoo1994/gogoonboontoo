
<header class="upperlogo">      
    <%= link_to root_path do %>
    <%= image_tag("explain.png", width: "300", :align=> "middle") %>
    <% end %>
</header>
<h2 class="one">로그인</h2>


<div class="con">


<div class="formsol">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "찾으러 가자!" %>
    <%= link_to '회원가입', new_user_registration_path, type: "button", class: "btn btn-default" %>
    <%= link_to "비밀번호를 잊으셨나요?", new_password_path(resource_name),  type: "button", class: "btn btn-default" %>

  </div>
</div>

</div>

<% end %>


