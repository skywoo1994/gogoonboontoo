

 <%= link_to controller: "front", action: "index" do %>

    <div class="logogo">
      <%=image_tag("logo.png", width: 100 )%>
    </div>
    <% end %>
    
    <h3 class="two">멋쟁이 사자처럼 at KU 5기 5조</h3>



<div class='container'>
  <div class="alert alert-success" role="alert">
    <strong><%= current_user.email.split('@').first %></strong>님이 로그인 하셨습니다.
    <div class="right d-inline">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-success right" %>
    </div>
  </div>
<p id="notice"><%= notice %></p>


<div class=".container",  id="background" style="height: 700px; background-size: contain; background-repeat: no-repeat">
  <div class="col-5", style="margin: 10px 100px; height: 10%; padding-top: 50px">
    <ul class="list-group">
      <li class="list-group-item progress-bar bg-danger"> 무엇을 찾으시나요? </li>
      <li class="list-group-item">
        <p style="padding: 10px 25px">항목</p>
        <div class="">
          <div class="input-group">
             <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
               <%= text_field_tag :title_search, params[:title_search], placeholder: "Search Thing" %>
               <%= submit_tag "GO!", :name => nil, class: "btn btn-danger"%>
             <% end %>
         </div>
        </div>
      </li>
      
       <li class="list-group-item">
        <p style="padding: 10px 25px">장소</p>
          <div class="">
            <div class="input-group">
              <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
                <%= text_field_tag :place_search, params[:place_search], placeholder: "Search Place" %>
                <%= submit_tag "GO!", :name => nil, class: "btn btn-danger" %>
              <% end %>
            </div>
          </div>
        </li>


        <li class="list-group-item">
        <p style="padding: 10px 25px">내용</p>
          <div class="">
            <div class="input-group">
              <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
                <%= text_field_tag :body_search, params[:body_search], placeholder: "Search Content" %>
                <%= submit_tag "GO!", :name => nil, class: "btn btn-danger" %>
              <% end %>
            </div>
          </div>
        </li>
        

        <li class="list-group-item">
          <p style="padding: 10px 15px">습득일자</p>
              <div class="">
                <div class="input-group">
                  <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
                    <%=text_field_tag :time_search, params[:time_search], :placeholder => "Search Time", type: "date", value: "Enter From", id: "example-date=input" %>
                    <%= submit_tag "GO!", :name => nil, class: "btn btn-danger"%>
                  <% end %>
                </div>
              </div>
            </li>
    </ul>
  </div>
</div>

<!-- <h1 class="hh">Posts</h1> -->
<div class="right">
        <% if current_user.email == 'master@korea.ac.kr' %>
          <%= link_to '습득물 작성하기', new_post_path, class: "btn btn-warning" %>
        <% end %>
</div>

<table class="table table-hover">
  <thead class="thead-inverse">
    <tr>
      <th style="width: 15%">항목</th>
      <th style="width: 10%">이미지</th>
      <th style="width: 20%">습득장소</th>
      <th style="width: 20%">습득일자</th>
      <th style="width: 35%">내용</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <% if post.image.url %>
          <td><%= image_tag(post.image.url, :size => '50x50') %></td>
        <% else %>
          <td>X</td>
        <% end %>
        
        <td><%= post.place %></td>
        <td><%= post.time %></td>
        <td><%= post.body %></td>
        
        <td><%= link_to 'Show', post, class:"btn btn-secondary" %></td>
        <% if current_user.email == 'master@korea.ac.kr' %>
          <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-secondary"  %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>




</div>



